{% extends 'base.html.twig' %}

{% block title %}
  Album index
{% endblock %}

{% block body %}
  <h1>Album index</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Artist</th>
        <th>Name</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      {% for album in albums %}
        <tr>
          <td>{{ album.id }}</td>
          <td>{{ album.artiste.name }}</td>
          <td>{{ album.name }}</td>
          <td>
            <a class="btn btn-primary" href="{{ path('app_album_show', { id: album.id }) }}">show</a>
            {% if is_granted('ROLE_ADMIN') %}
              <a class="btn btn-success" href="{{ path('app_album_edit', { id: album.id }) }}">edit</a>
            {% endif %}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="3">no records found</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_album_new') }}">Create new</a>
  {% endif %}
{% endblock %}
