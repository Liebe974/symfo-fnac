{% extends 'base.html.twig' %}

{% block title %}
  Album
{% endblock %}

{% block body %}
  <h1>Album</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>Id</th>
        <td>{{ album.id }}</td>
      </tr>
      <tr>
        <th>Name</th>
        <td>{{ album.name }}</td>
      </tr>
      <tr>
        <th>Artist</th>
        <td>{{ album.artiste.name }}</td>
      </tr>
    </tbody>
  </table>

  <a class="btn btn-primary mb-3" href="{{ path('app_album_index') }}">back to list</a>
  {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-success mb-3" href="{{ path('app_album_edit', { id: album.id }) }}">edit</a>
  {% endif %}

  {{ include('album/_delete_form.html.twig') }}
{% endblock %}
